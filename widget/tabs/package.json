    "icon": "tabs.png",

    "description": "用于多标签切换",

    "poweredBy": "AllMobilize",

    "styleBase": [
        "variables.less",
        "mixins.less",
        "base.less",
        "grid.less",
        "block-grid.less",
        "icon.less",
        "utility.less"
    ],

    "template": "tabs.hbs",

    "styleDependencies": [
        "ui.component.less",
        "ui.tabs.less",
        "animation.less"
    ],

    "style": "tabs.less",

